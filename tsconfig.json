{
  "include": ["server/**/*", "index.ts"], 
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "incremental": true,
    "outDir": "dist",
    "rootDir": ".",                        // <- Important to preserve your folder structure
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",           // <- Change this from "bundler" to "node"
    "jsx": "preserve",
    "lib": ["esnext", "dom", "dom.iterable"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "types": ["node", "vite/client"],
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    }
  }
}
